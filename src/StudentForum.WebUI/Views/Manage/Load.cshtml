@model StudentForum.WebUI.Models.Manage.ProfileModelView

<style>
.img-thumbnail {
    height : 100%;
    width : 100%;
}
</style>

<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src=@((Model.Photo == null || Model.Photo.Length < 1) ? "/images/anonymous.jpg" : string.Concat("data:image/png;base64,", Convert.ToBase64String(Model.Photo))) class="img-thumbnail">
                            <div class="mt-3">
                                <h4>@Model.FirstName @Model.LastName</h4>
                            </div>
                            <button type="button" onclick="return updatePhoto()" class="btn btn-outline-info">Change photo</button>
                        </div>
                    </div>
               </div>
           </div>
           <div class="col-md-8">
               <div class="card mb-3">
                   <div class="card-body">
                       <div class="row">
                           <div class="col-sm-3">
                               <label asp-for="FirstName"></label>
                           </div>
                           <div class="col-sm-9 text-secondary">
                               @Model.FirstName
                           </div>
                       </div>
                       <hr>
                       <div class="row">
                           <div class="col-sm-3">
                               <label asp-for="LastName"></label>
                           </div>
                           <div class="col-sm-9 text-secondary">
                               @Model.LastName
                           </div>
                       </div>
                       <hr>
                       <div class="row">
                           <div class="col-sm-3">
                               <label asp-for="Email"></label>
                           </div>
                           <div class="col-sm-9 text-secondary">
                               @Model.Email
                           </div>
                       </div>
                       <hr>
                       <div class="row">
                           <div class="col-sm-12">
                               <button class="btn btn-outline-dark" onclick="return changePassword()">Change password</button>
                               <button class="btn btn-outline-info" onclick="return updateInfoGet()">Edit</button>
                           </div>
                       </div> 
                   </div>
               </div>
            </div>
         </div>
    </div>
</div>