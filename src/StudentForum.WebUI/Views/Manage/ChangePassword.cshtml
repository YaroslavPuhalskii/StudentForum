@model StudentForum.WebUI.Models.Manage.ChangePasswordModelView

<div class="modal" tabindex="-1" id="changePasswordForm">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Change password</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
            <label class="text-danger" id="serverError"></label>
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="control-label"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                </div>                
            </form>
       </div>
      <div class="modal-footer">
        <button type="button" onclick="return changePassword();" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script>
    $("#changePasswordForm").ready(function () {
        showChangePasswordModal();
    })

    changePassword = function () {

        $.ajax({
            type : 'POST',
            url : '@Url.Action("ChangePassword", "Manage")',
            data : $('form').serialize(),
            success : function (response) {
                if (response.result) {
                    hideChangePasswordModal();
                    load();
                }
                else {
                    $("#serverError").text(response.message);
                }
            }
        })
    }

    showChangePasswordModal = function () {
        $("#changePasswordForm").modal('show');
    }

    hideChangePasswordModal = function () {
        $("#changePasswordForm").modal('hide');
    }
</script>