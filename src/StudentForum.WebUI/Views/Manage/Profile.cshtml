<div id="loader">
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<div id="data_user"> </div>
<div id="dialog_form"> </div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#loader").css('display', "display");
            load();
        });

        function load() {
            $("#loader").css('display', "display");
            $("#data_user").load('@Url.Action("Load", "Manage")',
            function () {
                $("#loader").css('display', "none");
            });
        }

        updatePhoto = function() {
            $("#dialog_form").load('@Url.Action("UpdatePhoto", "Manage")');
        }

        updateInfoGet = function() {
            $("#dialog_form").load('@Url.Action("Update", "Manage")');
        }
    </script>
}